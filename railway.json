{
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "Dockerfile",
      "go.mod",
      "go.sum",
      "src/**",
      "public_html/**",
      "*.env"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false
  }
}
